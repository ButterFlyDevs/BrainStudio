<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:counter="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="butterflydevs.brainstudio.Juego1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Zona E"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Memoria extrema"
                android:id="@+id/textView6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:id="@+id/layoutNivel1">

            <butterflydevs.brainstudio.CircularCounter
                xmlns:meter="http://schemas.android.com/apk/res-auto"
                android:id="@+id/meter1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                meter:range="60"
                meter:textSize="50sp"

                meter:textColor="#2a2b2b"
                meter:metricSize="10sp"
                meter:metricText="metric"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:id="@+id/layoutNivel2">

            <butterflydevs.brainstudio.CircularCounter
                xmlns:meter="http://schemas.android.com/apk/res-auto"
                android:id="@+id/meter2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                meter:range="60"
                meter:textSize="50sp"

                meter:textColor="#2a2b2b"
                meter:metricSize="10sp"
                meter:metricText="metric"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:id="@+id/layoutNivel3">

            <butterflydevs.brainstudio.CircularCounter
                xmlns:meter="http://schemas.android.com/apk/res-auto"
                android:id="@+id/meter3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                meter:range="60"
                meter:textSize="50sp"

                meter:textColor="#2a2b2b"
                meter:metricSize="10sp"
                meter:metricText="metric"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutImagenesR"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutImagenes"
                android:gravity="clip_horizontal"></LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/botonHelp"
                android:background="@drawable/question"
                android:gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/botonBack"
                android:background="@drawable/back"
                android:layout_gravity="left"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
