<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="butterflydevs.brainstudio.Help">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo_ayuda"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textColor="#8A0829"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descripcion_ayuda"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:id="@+id/foto_linearLayout_1"
                        />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/texto_linearLayout_1"
                            android:layout_weight="1"
                            android:gravity="center"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/texto_linearLayout_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:id="@+id/foto_linearLayout_2"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/texto_fin_ayuda"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"

        >
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/boton_atras_ayuda"
            android:background="@drawable/back"
            android:layout_marginRight="50dp"
            />

    </LinearLayout>
</LinearLayout>