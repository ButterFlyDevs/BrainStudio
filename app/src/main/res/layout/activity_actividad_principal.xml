<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActividadPrincipal"
    android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="brain status"
        android:id="@+id/textView"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <butterflydevs.brainstudio.CircularCounter
            xmlns:meter="http://schemas.android.com/apk/res-auto"
            android:id="@+id/meter"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            meter:range="60"
            meter:textSize="50sp"

            meter:textColor="#2a2b2b"
            meter:metricSize="10sp"
            meter:metricText="metric"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="34592"
                android:id="@+id/textPuntos"
                android:textStyle="bold"
                android:textSize="30dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="31th "
                android:id="@+id/textPos"
                android:textStyle="bold"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:id="@+id/layoutMedallas">

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/buttonGAme"
            android:background="@drawable/brain2" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/buttonUser"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ranking"
                android:layout_margin="20dp" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/buttonShare"
                android:layout_gravity="center_vertical"
                android:background="@drawable/share"
                android:layout_margin="20dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/buttonSettings"
                android:background="@drawable/settings2"
                android:layout_margin="20dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
