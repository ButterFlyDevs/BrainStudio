<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActividadPrincipal"
    android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="brain status"
        android:id="@+id/textView"
        android:gravity="center" />

    <butterflydevs.brainstudio.CircularCounter
        xmlns:meter="http://schemas.android.com/apk/res-auto"
        android:id="@+id/meter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="5dp"
        meter:range="60"
        meter:textSize="50sp"

        meter:textColor="#2a2b2b"
        meter:metricSize="10sp"
        meter:metricText="metric"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button2"
            android:background="@drawable/badge" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            android:background="@drawable/badge" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button5"
            android:background="@drawable/badge" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button6"
            android:background="@drawable/badge" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="34592"
            android:id="@+id/textPuntos"
            android:textStyle="bold"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="pts"
            android:id="@+id/textPTS"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="31th "
            android:id="@+id/textPos"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/button"
                android:background="@drawable/brain" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/buttonUser"
                android:layout_gravity="center_vertical"
                android:background="@drawable/profile" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
