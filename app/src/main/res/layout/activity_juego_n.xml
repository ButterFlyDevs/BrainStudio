<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="butterflydevs.brainstudio.juegoN">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <butterflydevs.brainstudio.CircularCounter
            xmlns:meter="http://schemas.android.com/apk/res-auto"
            android:id="@+id/meter1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            meter:range="60"
            meter:textSize="50sp"

            meter:textColor="#2a2b2b"
            meter:metricSize="10sp"
            meter:metricText="metric"
            android:layout_gravity="center_horizontal" />

        <butterflydevs.brainstudio.CircularCounter
            xmlns:meter="http://schemas.android.com/apk/res-auto"
            android:id="@+id/meter2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            meter:range="60"
            meter:textSize="50sp"

            meter:textColor="#2a2b2b"
            meter:metricSize="10sp"
            meter:metricText="metric"
            android:layout_gravity="center_horizontal" />
        <butterflydevs.brainstudio.CircularCounter
            xmlns:meter="http://schemas.android.com/apk/res-auto"
            android:id="@+id/meter3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            meter:range="60"
            meter:textSize="50sp"

            meter:textColor="#2a2b2b"
            meter:metricSize="10sp"
            meter:metricText="metric"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</RelativeLayout>
